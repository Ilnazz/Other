using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace eXamination
{
    class Program
    {
        static void Main(string[] args)
        {
            First();
            Second();
        }

        static void First()
        {
            string cardPassword = "132465";
            int cardCash = 0;

            Console.WriteLine("Вставтье карту...");

            int tries = 3; // количество попыток

            while (tries > 0)
            {
                Console.Write($"Введите пин-код ({tries} попытки): ");
                string userInput = Console.ReadLine();
                if (userInput == cardPassword)
                {
                    Console.WriteLine("Пин-код верный.");
                    break;
                }
                tries--;
            }

            Console.WriteLine("Доступные операции:\n\t1) Баланс;\n\t2) Снять деньги;\n\t3) Внести деньги;\n\t4) Заверишть работу.");
            string operation = "";
            while (operation != "4")
            {
                Console.Write("Выберите операцию: ");
                operation = Console.ReadLine();

                switch (operation)
                {
                    case "1":
                        Console.WriteLine($"Баланс карты: {cardCash} руб.");
                        break;
                    case "2":
                        Console.Write($"Какую сумму денег вы хотите снять с карты (руб.): ");
                        int sum = int.Parse(Console.ReadLine());
                        if (sum > cardCash)
                        {
                            Console.WriteLine("На карте недостаточно средств.");
                        }
                        else
                        {
                            cardCash -= sum;
                            Console.WriteLine($"С карты снято {sum} руб."); ;
                        }
                        break;
                    case "3":
                        Console.WriteLine($"Какую сумму денег вы хотите внести на счет (руб.): ");
                        sum = int.Parse(Console.ReadLine());
                        cardCash += sum;
                        Console.WriteLine($"На счет внесено {sum} руб.");
                        break;
                    case "4":
                        Console.WriteLine("Заберите карту.");
                        break;
                   default:
                        Console.WriteLine("Неверная операция. Повторите ввод.");
                       break;
                }
            }
        }

        static void Second()
        {
            Console.Write("Введите порядок квадратной матрицы: ");
            int N = int.Parse(Console.ReadLine());

            int[,] matrix = new int[N, N];

            for (int i = 0; i < N; i++)
            {
                for (int j = 0; j < N; j++)
                {
                    if (i == j)
                    {
                        matrix[i, j] = N - i;
                    } else
                    {
                        matrix[i, j] = 0;
                    }
                    Console.Write($"{matrix[i, j]} ");
                }
                Console.WriteLine();
            }
        }
        
    }
}
